{
  "manifest_version": 3,
  "name": "BiliBili Blacklist",
  "version": "0.8.5",
  "description": "根据关键词屏蔽Bilibili的视频和评论,支持正则",
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "眼不见为净",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "webRequest"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*.bilibili.com/*",
        "https://*.bilibili.com/*"
      ],
      "run_at": "document_idle",
      "js": [
        "contentScript.js"
      ],
      "host_permissions": [
        "http://*.bilibili.com/*",
        "https://*.bilibili.com/*"
      ]
    }
  ]
}